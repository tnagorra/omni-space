{
    "manifest_version": 2,
    "version": "1.0",

    "name": "__MSG_extensionName__",
    "description": "__MSG_extensionDescription__",

    "default_locale": "en",

    "icons": {
        "48": "icons/icon.svg",
        "96": "icons/icon.svg"
    },

    "browser_specific_settings": {
        "gecko": {
            "id": "omni-space@togglecorp.com"
        }
    },
    "background": {
        "page": "background.html",
        "persistent": true
    },
    "omnibox": { "keyword": "sp" },
    "permissions": [
        "notifications",
        "sessions",
        "storage",
        "tabs",
        "tabHide"
    ]
}

